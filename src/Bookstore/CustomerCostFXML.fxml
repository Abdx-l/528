<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Bookstore.CustomerCostFXMLController" spacing="20" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="totalCostLabel" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>
    <Label fx:id="pointsStatusLabel" style="-fx-font-size: 14pt;"/>
    
    <Button text="Back to Store" onAction="#handleBackToStore" 
            style="-fx-font-size: 14; -fx-min-width: 200;"/>
</VBox>